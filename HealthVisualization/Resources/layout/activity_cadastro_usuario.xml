<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/inner_frame_layout_vertical_padding"
    android:paddingHorizontal="@dimen/inner_frame_layout_horizontal_padding">

    <EditText
        android:inputType="textAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite aqui o nome"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextNome" />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite aqui o email"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextEmail" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite aqui a senha"
        android:id="@+id/editTextSenha" />

    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirme aqui a senha"
        android:id="@+id/editTextConfirmarSenha" />
    <Button
        android:text="Cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCadastrar" />

</LinearLayout>